<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="Regression Tests" parallel="tests" thread-count="2">
    <test name="test 1">
        <groups>
            <run>
                <include name="Smoke"/>
                <include name="Regression"/>
                <exclude name="someGroupName"/>
            </run>
        </groups>
        <packages>
            <package name="tests"/>
        </packages>
    </test>
    <test name="test 2">
        <classes>
            <class name="tests.BasketTests"/>
            <class name="tests.SingleProductTests"/>
        </classes>
    </test>
</suite>