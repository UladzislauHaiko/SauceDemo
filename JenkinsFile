pipeline {
    agent any

    parameters {
        gitParameter branchFilter: 'origin/(.*)', defaultValue: 'master', name: 'BRANCH', type: 'PT_BRANCH'
        choice(name: 'BROWSER', choices: ['chrome', 'firefox', 'safari'], description: 'Select a browser')
        booleanParam(name: 'IS_HEADLESS', defaultValue: true, description: 'Toggle headless mode')
        choice(name: 'SUITE', choices: ['smoke.xml', 'regression.xml'], description: 'Choose a suite')
    }

    triggers {
            parameterizedCron('''
            0 9 * * 1,3,5 %SUITE=smoke.xml;%BROWSER=chrome;%IS_HEADLESS=true
            00 23 1-31/2 * * %SUITE=regression.xml;%BROWSER=firefox;%IS_HEADLESS=false;
            ''')
        }

    tools {
        maven "m3"
    }

    stages {
        stage('Run tests') {
            steps {
            git branch: "${params.BRANCH}", url: 'https://github.com/UladzislauHaiko/SauceDemo.git'
            bat "mvn -Dmaven.test.failure.ignore=true -Dbrowser=${params.BROWSER} -Dheadless=${params.IS_HEADLESS} -DsuiteName=${params.SUITE} clean test"
            }

            post {
                success {
                    junit '**/target/surefire-reports/TEST-*.xml'
                }
            }
        }

        stage('Generate Allure report') {
            steps {
                allure includeProperties: false, report: 'target/allure-report', results: [[path: 'target/allure-results']]
            }
        }
    }
}